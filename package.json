{
  "name": "angular-starter-kit",
  "version": "1.0.0",
  "description": "A starter kit for building an angular 4 web application",
  "author": "Brian Schneier",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bschneier/angular-starter-kit"
  },
  "scripts": {
    "prebuild": "SET NODE_ENV=production& npm-run-all check-security tslint stylelint test",
    "build": "rimraf dist/*& webpack --config config/webpack.prod.js",
    "build:dev": "rimraf dist/*& webpack --config config/webpack.dev.js",
    "check-security": "nsp check",
    "stylelint": "stylelint --config config/stylelint.js --color app/**/*.scss",
    "prestart": "npm-run-all check-security tslint stylelint test",
    "start": "webpack-dev-server --inline --hot --open --config config/webpack.dev.js",
    "test:watch": "karma start config/karma.conf.js",
    "test": "karma start config/karma.conf.js --single-run",
    "tslint": "tslint app/**/*.ts -t verbose --project tsconfig.json --config config/tslint.json"
  },
  "dependencies": {
    "@angular/common": "5.2.9",
    "@angular/compiler": "5.2.9",
    "@angular/core": "5.2.9",
    "@angular/forms": "5.2.9",
    "@angular/http": "5.2.9",
    "@angular/platform-browser": "5.2.9",
    "@angular/platform-browser-dynamic": "5.2.9",
    "@angular/router": "5.2.9",
    "core-js": "2.5.3",
    "reflect-metadata": "0.1.12",
    "rxjs": "5.5.6",
    "zone.js": "0.8.26"
  },
  "devDependencies": {
    "@angular/cli": "1.7.0",
    "@types/jasmine": "2.8.6",
    "@types/node": "9.4.6",
    "@types/webpack-env": "1.13.5",
    "angular2-template-loader": "0.6.2",
    "awesome-typescript-loader": "5.0.0",
    "compression-webpack-plugin": "1.1.11",
    "css-loader": "0.28.11",
    "file-loader": "1.1.11",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "istanbul-instrumenter-loader": "3.0.0",
    "jasmine-core": "2.9.1",
    "karma": "2.0.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-cli": "1.0.1",
    "karma-coverage-istanbul-reporter": "1.4.1",
    "karma-htmlfile-reporter": "0.3.5",
    "karma-jasmine": "1.1.1",
    "karma-webpack": "4.0.0-beta.0",
    "mini-css-extract-plugin": "0.4.0",
    "node-sass": "4.9.0",
    "npm-run-all": "4.1.2",
    "nsp": "3.2.1",
    "postcss": "6.0.22",
    "postcss-cssnext": "3.1.0",
    "postcss-import": "11.1.0",
    "postcss-loader": "2.1.4",
    "rimraf": "2.6.2",
    "sass-loader": "7.0.1",
    "style-loader": "0.21.0",
    "stylelint": "8.4.0",
    "stylelint-config-sass-guidelines": "4.1.0",
    "stylelint-config-standard": "18.0.0",
    "stylelint-order": "0.8.0",
    "stylelint-scss": "2.3.0",
    "tslint": "5.9.1",
    "typescript": "2.7.1",
    "webpack": "4.6.0",
    "webpack-cli": "2.0.15",
    "webpack-dev-server": "3.1.3",
    "webpack-merge": "4.1.2"
  }
}
